{
  "extends": "../configs/tsconfig",
  "compilerOptions": {
    "paths": {
      "dummy/tests/*": [
        "tests/*"
      ],
      "dummy/*": [
        "tests/dummy/app/*",
        "app/*"
      ],
      "hokulea": [
        "addon"
      ],
      "hokulea/*": [
        "addon/*"
      ],
      "hokulea/test-support": [
        "addon-test-support"
      ],
      "hokulea/test-support/*": [
        "addon-test-support/*"
      ],
      "*": [
        "types/*",
        "../types/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "addon/**/*",
    "tests/**/*",
    "types/**/*",
    "test-support/**/*",
    "addon-test-support/**/*",
    "..packages/*/addon/**/*"
  ]
}
