<div>
  <input type="checkbox" checked={{eq this.context 'dark'}} {{on "change" this.switchContext}}>

  {{#each this.themeNames as |theme|}}
    <button {{on "click" (fn this.selectTheme theme)}}>{{theme}}</button>
  {{/each}}

  <div {{did-insert this.setupDummy}} local-class="{{this.context}}"></div>
</div>