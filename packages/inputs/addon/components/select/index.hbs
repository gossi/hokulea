<div local-class="extrinsic">
  <div local-class="select">
    <DropdownBuilder as |ddb|>
      <button
        type="button"
        local-class="trigger"
        {{dropdown-trigger ddb installListener=this.installTriggerListener}}
        {{!-- {{did-insert (fn this.installRemoteControl ddb)}} --}}
      >
        <span>
          {{#if @value}}
            {{#if @multiple}}
              {{#each @value as |value|}}
                <span local-class="selected-value">
                  {{yield value}}
                </span>
              {{/each}}
            {{else}}
              {{yield @value}}
            {{/if}}
          {{else if @placeholder}}
            {{@placeholder}}
          {{else}}
            &nbsp;
          {{/if}}
        </span>
        <svg
          width="18"
          height="11"
          viewBox="0 0 18 11"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path d="M1 1L9 9L17 1" stroke="#DFDFDF" stroke-width="2"></path>
        </svg>
      </button>
      <List
        tabindex="-1"
        local-class="options"
        aria-multiselectable={{if @multiple "true"}}
        @items={{@options}}
        @select={{this.select}}
        {{on "mouseup" (fn this.close ddb.close)}}
        {{did-insert this.setupList}}
        {{dropdown-popup ddb}} as |option|
      >
        {{yield option}}
      </List>
    </DropdownBuilder>
  </div>
</div>