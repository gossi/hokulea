<BaseCard local-class="card" ...attributes>
  {{#if (has-block "header")}}
    <div local-class="header">
      {{yield to="header"}}
    </div>
  {{/if}}

  <div local-class="content">
    {{#if (has-block "content")}}
      {{yield to="content"}}
    {{else}}
      {{yield}}
    {{/if}}
  </div>

  {{#if (has-block "footer")}}
    <div local-class="footer">
      {{yield to="footer"}}
    </div>
  {{/if}}
</BaseCard>